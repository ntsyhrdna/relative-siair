<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_siair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIAIR"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true" />

    <Spinner
        android:id="@+id/sp_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_siair"
        android:entries="@array/arr_nama"/>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pesawat"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_nomor_penerbangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SI 1908"
        android:layout_above="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:id="@+id/tv_rute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLG-JKT"
        android:layout_below="@id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"/>











</RelativeLayout>